
<section id="portfolio" class="bg-light-gray index-page">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Field Agents</h2>
        <h3 class="section-subheading text-muted"> Previously Deployed
        </h3>
      </div>
    </div>
    <div class="row">


      <% @robots.each do |robot| %>
      <div id="robot-title-<%= robot.serial_number %>" class="col-md-4 col-sm-6 portfolio-item">
        <a href="/robots/<%= robot.serial_number %>/edit" class="portfolio-link" data-toggle="modal">
          <div class="portfolio-hover">
            <div class="portfolio-hover-content">
              <i class="fa fa-plus fa-3x"></i>
            </div>
          </div>
          <img src="https://robohash.org/<%= robot.avatar %>" class="img-responsive" alt="">
        </a>
        <div class="portfolio-caption">
          <!-- <div class="portfolio-caption2"> -->
          <h4 >Secret Agent <%= robot.serial_number  %>: <a href="/robots/<%= robot.serial_number %>"><%= robot.name%></a></h4>
          <a href="/robots/<%= robot.serial_number %>/edit">Reprogram</a>
          <form action="/robots/<%= robot.serial_number %>" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" class="btn-warning" value="terminate"/>
          </form>
        <!-- </div> -->
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>